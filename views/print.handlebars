<div>
    <h1 class="title">Print Labels</h1>
    <div id="print-queue"></div>
    <button class="button is-primary" onclick="printLabels()">Print</button>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const queue = JSON.parse(localStorage.getItem('queue')) || [];
        const printQueue = document.getElementById('print-queue');
        queue.forEach(item => {
            const div = document.createElement('div');
            div.classList.add('box');
            div.innerHTML = `<div>${item.name} - Quantity: ${item.quantity}</div>`;
            printQueue.appendChild(div);
        });
    });

    function printLabels() {
        // Implement print functionality (e.g., using jsPDF)
        alert('Printing labels...');
    }
</script>
